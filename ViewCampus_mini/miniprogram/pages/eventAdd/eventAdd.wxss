/* pages/event/eventAdd.wxss */
.map_view{
  width: 100%;
  height: 210px;
  display: flex;
  justify-content: center;
}
#mymap{
  width: 96%;
  height: 200px;
}
.hintText{
  display: inline;
  margin-left: 10px;
  font-size: large;
}
.nameView{
  display: flex;
  align-items: center;
}
.nameInput{
  display: inline-block;
  border:1px solid chartreuse;
  border-radius: 5px;
}
.timeView{
  display: flex;
  align-items: center;
}
.datePickerView{
  display: inline-block;
  margin-top: 3px;
}
.dataView{
  display: block;
}
picker{
  background-color: rgb(187, 243, 215);
  border-radius: 5px;
  margin: 1px 5px;
}
.datePicker{
  display: inline-block;
}
.timePickerView{
  display: inline-block;
  margin-top: 3px;
  margin-left: 10px;
}
.siteInput{
  margin-left: 15px;
  width: 350px;
  border: 1px solid rgb(133, 219, 4);
  border-radius: 8px;
}
.contentView{
  margin-top: 5px;
}
.text_content{
  margin-left: 15px;
  border: 1px solid rgb(133, 219, 4);
  border-radius: 10px;
  padding: 10px;
}
.buttonView{
  margin-top: 10px;
  display: flex;
  align-items: center;
}
.confirmButton{
  border: 2px solid rgb(179, 165, 165);
  border-radius: 20px;
}